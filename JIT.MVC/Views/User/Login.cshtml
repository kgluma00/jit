@model JIT.MVC.Models.UserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="@Url.Content("../../login/css/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../../login/css/util.css")" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="@Url.Content("../../images/icons/favicon.ico")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../login/vendor/bootstrap/css/bootstrap.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../login/fonts/font-awesome-4.7.0/css/font-awesome.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../login/vendor/animate/animate.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../login/vendor/css-hamburgers/hamburgers.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../login/vendor/select2/select2.min.css")">
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="../../login/images/img-01.png" alt="IMG">
                </div>
                <form class="login100-form validate-form" asp-action="LoginUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="login100-form-title">
                        Member Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input asp-for="Username" class="input100" type="text" name="Username" placeholder="Username">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" asp-for="Password" type="password" name="Password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2"  asp-controller="User" asp-action="Register">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <script type="text/javascript" src="@Url.Content("../../login/js/main.js")" asp-append-version="true"></script>
    <script src="../../login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("../../login/vendor/bootstrap/js/popper.js")"></script>
    <script src="@Url.Content("../../login/vendor/bootstrap/js/bootstrap.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("../../login/vendor/select2/select2.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("../../login/vendor/tilt/tilt.jquery.min.js")"></script>

</body>
</html>
